<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    tools:context=".AdicionarCliente2Activity">

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="56sp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:backgroundTint="@color/Cor_principal"
        android:layout_alignParentTop="true"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="11sp"
            android:background="@drawable/icone_clientes" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="50sp"
            android:paddingLeft="50sp"

            />


    </com.google.android.material.appbar.AppBarLayout>

</LinearLayout>

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/CPF"
            android:layout_marginTop="43sp"
            android:textSize="22sp"
            android:textColor="@color/Cor_principal"
            android:fontFamily="@font/segoe_ui"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_InsiraCPFCliente"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Insira_o_CPF_do_cliente">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/CEP"
            android:textSize="22sp"
            android:textColor="@color/Cor_principal"
            android:fontFamily="@font/segoe_ui"
            android:layout_marginTop="15sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_InsiraCEPCliente"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Insira_o_CEP_do_cliente">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Rua"
            android:textSize="22sp"
            android:textColor="@color/Cor_principal"
            android:fontFamily="@font/segoe_ui"
            android:layout_marginTop="15sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_InsiraRuaCliente"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Insira_a_rua_do_cliente">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Complemento"
            android:textSize="22sp"
            android:textColor="@color/Cor_principal"
            android:fontFamily="@font/segoe_ui"
            android:layout_marginTop="15sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_InsiraComplemento"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Insira_um_complemento">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/DataDeNascimento"
            android:textSize="22sp"
            android:textColor="@color/Cor_principal"
            android:fontFamily="@font/segoe_ui"
            android:layout_marginTop="15sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_InsiraData"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ex_25_01_2009">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Finalizar"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="@string/Finalizar"
            android:textSize="20sp"
            app:backgroundTint="@color/Cor_principal"
            app:cornerRadius="40sp" />

    </LinearLayout>



</RelativeLayout>