<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuporteConfiguracaoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:backgroundTint="@color/Cor_principal"
        android:layout_alignParentTop="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_AdicionarMaquina"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="50sp"
            android:paddingLeft="50sp"
            app:title="Suporte"
            app:titleMarginStart="8sp"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/tb_IconBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="7sp"
        android:background="@drawable/icone_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55sp">

    <LinearLayout
        android:layout_margin="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/text1"
            android:layout_marginTop="10sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/text2"
            android:layout_marginTop="30sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/Noinstagram"
            android:layout_marginTop="40sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp">

        <ImageView
            android:layout_width="46sp"
            android:layout_height="46sp"
            android:background="@drawable/icone_instagram"
            android:maxHeight="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/debairroinsta"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/segoe_ui"
            android:layout_marginTop="10sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui"
            android:layout_marginTop="10sp"
            android:text="Ou no email"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp">

            <ImageView
                android:layout_width="42sp"
                android:layout_height="42sp"
                android:background="@drawable/icone_gmail"
                android:maxHeight="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/debairroemail"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoe_ui"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="5sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150sp"
            android:layout_marginTop="200sp"
            android:fontFamily="@font/segoe_ui"
            android:text="@string/DeBairro"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>