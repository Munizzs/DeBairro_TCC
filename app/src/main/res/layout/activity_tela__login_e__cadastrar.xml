<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela_Login_e_Cadastrar">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mercado"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mercado_roxo"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:background="@drawable/carrinho_supermarket"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="53dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BTN_Cad"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@id/ou"
        android:layout_marginBottom="175dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/btn_tcc_cad"
        android:text="Cadastro"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Log"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@id/ou"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/btn_tcc"
        android:text="Login"
        android:textSize="24dp"
        android:textColor="#C6A7E4"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ou"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Ou se conecte com"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_marginBottom="140dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <View
        android:layout_width="110dp"
        android:layout_height="2dp"
        android:layout_marginBottom="6dp"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="@id/ou"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="110dp"
        android:layout_height="2dp"
        android:layout_marginBottom="6dp"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="@id/ou"
        tools:layout_editor_absoluteX="287dp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="DeBairro"
        app:layout_constraintBottom_toBottomOf="@id/BTN_Cad"
        android:layout_marginBottom="180dp"
        android:textSize="45dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="175dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="39dp"
        android:background="@drawable/btn_facebook"
        android:text="Facebook"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="19dp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="175dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="39dp"
        android:background="@drawable/btn_google"
        android:text="Google"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="210dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>